<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/activity_main"
    tools:context="com.xuewenhui.zxingdemo.MainActivity">

    <EditText
        android:id="@+id/create_qr_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="请输入您想要输入的内容："/>

    <CheckBox
        android:id="@+id/create_qr_addLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="是否添加Logo"/>

    <Button
        android:id="@+id/create_qr_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="生成二维码"/>

    <ImageView
        android:id="@+id/create_qr_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>
